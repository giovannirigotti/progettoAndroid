<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RankingActivity">

    <TextView
        android:id="@+id/tv_classifica_piloti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/classifica_piloti_text"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/classifica_piloti"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_below="@+id/tv_classifica_piloti"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#C9F9FF"
        android:foregroundTint="#2196F3" />


    <TextView
        android:id="@+id/tv_classifica_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classifica_piloti"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/classifica_team_text"
        android:textColor="#000000"
        android:textSize="24sp" />


    <ListView
        android:id="@+id/classifica_team"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_below="@id/tv_classifica_team"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#C9F9FF"
        android:foregroundTint="#2196F3" />


</RelativeLayout>