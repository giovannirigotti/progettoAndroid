<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/info_label_pilota_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/label_nome_text" />

        <TextView
            android:id="@+id/info_pilota_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/info_label_pilota_nome"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="@string/label_nome_text"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/info_pilota_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_below="@id/info_pilota_auto"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/info_label_pilota_team"
            android:text="@string/team_text"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/info_label_pilota_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_pilota_nome"
            android:layout_marginTop="15dp"
            android:text="@string/auto_text" />

        <TextView
            android:id="@+id/info_pilota_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_pilota_nome"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/info_label_pilota_auto"
            android:text="@string/auto_text"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/info_label_pilota_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_pilota_auto"
            android:layout_marginTop="15dp"
            android:text="@string/team_text" />

        <Button
            android:id="@+id/btn_esci"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_pilota_auto"
            android:layout_marginStart="200dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/info_label_pilota_team"
            android:backgroundTint="#00BCD4"
            android:text="@string/esci_text"
            android:textColor="#000000"
            android:textSize="18sp" />


    </RelativeLayout>
</LinearLayout>